---
title: RSS feed
description: nobody uses these but everybody should
layout: none
permalink: /rss.xml
---
<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0">
		<channel>
			<title>Box Critters Modding Comminity</title>
			<link>{{site.url}}</link>
	{%comment%}{% for collection in site.collections %}
			{% assign current_collection=site[collection.label] %}{%endcomment%}
			{% for item in site.documents %}
				{% if item.rss %}
					<item>
						<title>{{ item.title|slugify }}</title>
						{% for author in item.author %}
							<author><name>{{ author }}</name></author>
						{% endfor %}
						{% if item.date %}<date>{{item.date}}</date>{% endif %}
						{% if item.excerpt %}<excerpt>{{item.excerpt | replace: "<","&lt;" | replace: ">","&gt;"}}</excerpt>{% endif %}
						<url>{{ item.url }}</url>
						<content>{{item.content | replace: "<","&lt;" | replace: ">","&gt;"}}</content>
					</item>
				{% endif %}
			{% endfor %}
	{%comment%}{% endfor %}{%endcomment%}
		</channel>
</rss>

---
title: RSS feed
description: nobody uses these but everybody should
layout: none
permalink: /rss.xml
---
<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0">
		<channel>
			<title>Box Critters Modding Comminity</title>
			<link>{{site.url}}</link>
			{% for item in site.documents %}
				{% if item.rss %}
					<item>
						<title type="html">{{ item.title | xml_escape }}</title>
						<link href="{{ item.url }}" rel="alternate" type="text/html" title="{{ item.title|slugify | xml_escape }}"/>
						{% for author in item.author %}
							<author><name>{%if author.custom%}{{ author.name | xml_escape }}{%else%}{{author|xml_escape}}{%endif%}</name></author>
						{% endfor %}
						{% if item.date %}<published>{{item.date| date_to_xmlschema }}</published>{% endif %}
						{% if item.description %}<summary type="html">{{item.description | xml_escape}}</summary>{% endif %}
						<id>{{ item.url }}</id>
						<content type="html" xml:base="{{ item.url }}">{{item.content |  | xml_escape}}</content>
							{% for cat in item.categories %}
							<category term="{{cat | xml_escape}}"/>
							{%endfor%}
							<category term="{{item.collection}"/>
					</item>
				{% endif %}
			{% endfor %}
		</channel>
</rss>
